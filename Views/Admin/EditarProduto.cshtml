@model ProdutoModel
@{
	ViewData["Title"] = "Editar produto";
}

<h1 class="text-center">Editar produto</h1>
<hr />

<form asp-action="EditarProduto" class="d-flex flex-column gap-3" style="margin: 2rem 20%">

	<input type="hidden" asp-for="Id" />

	<div class="form-group gap-2">
		<label>Nome:</label>
		<input asp-for="Nome" class="form-control" />
	</div>

	<div class="form-group gap-2">
		<label>Descrição:</label>
		<input asp-for="Descricao" class="form-control" />
	</div>

	<div class="form-group gap-2">
		<label>Preço:</label>
		<input asp-for="Preco" class="form-control" />
	</div>

	<div class="form-group gap-2">
		<label>Quantidade:</label>
		<input asp-for="Quantidade" class="form-control" type="number" />
	</div>

	<div class="form-group gap-2">
		<label>Imagem 1 (Principal):</label>
		<input asp-for="Imagem1" class="form-control" />
	</div>

	<div class="form-group gap-2">
		<label>Imagem 2:</label>
		<input asp-for="Imagem2" class="form-control" />
	</div>

	<div class="form-group gap-2">
		<label>Imagem 3:</label>
		<input asp-for="Imagem3" class="form-control" />
	</div>

	<div class="form-group d-flex align-items-center justify-content-center">
		<input type="submit" class="w-50 p-3 btn btn-warning" value="Salvar alterações" />
	</div>
</form>